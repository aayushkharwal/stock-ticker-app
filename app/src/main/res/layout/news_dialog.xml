<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="390dp"
    android:layout_height="wrap_content"
    app:cardElevation="20dp"
    app:cardCornerRadius="30dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/newsCardSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24dp"
            android:text="SeekingAlpha"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/newsCardDatetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/mediumGrey"
            android:textStyle="bold"
            android:text="March 22, 2024" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginVertical="15dp"/>

        <TextView
            android:id="@+id/newsCardHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="United States Vs. Apple: The Winner Could Be You (Rating Upgrade)" />

        <TextView
            android:id="@+id/newsCardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginVertical="10dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="DOJ sues Apple Inc. for monopolistic practices, stock drops 15%. Could present a buying opportunity. Click for my AAPL update and a review of its antitrust issues." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="fill_horizontal"
            android:layout_marginTop="15dp">
            <Space
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <ImageButton
                android:id="@+id/newsCardChrome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chrome"
                android:background="@null"
                android:contentDescription="chrome_icon" />

            <Space
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <ImageButton
                android:id="@+id/newsCardTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/twitterx"
                android:background="@null"
                android:contentDescription="twitter_icon"
                android:layout_marginStart="16dp" />

            <Space
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <ImageButton
                android:id="@+id/newsCardFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facebook"
                android:background="@null"
                android:contentDescription="facebook_icon"
                android:layout_marginStart="16dp" />

            <Space
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
